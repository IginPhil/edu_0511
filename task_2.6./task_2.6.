/*
Задание: Даны переменные a и b. Проверьте, что a делится без остатка на b.
Если это так - выведите 'Делится' и результат деления, иначе выведите 'Делится с остатком' и остаток от деления.
*/

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        System.out.println("Введите первое число - ЧИСЛИТЕЛЬ : ");
        Scanner firstNum = new Scanner(System.in);
        double a = firstNum.nextInt();
        System.out.println("Введите второе число - ЗНАМЕНАТЕЛЬ : ");
        Scanner secondNum = new Scanner(System.in);
        double b = secondNum.nextInt();
        double c = a / b;
        double d = a % b;
        System.out.println(" Число делиться без остатка на " + Math.round(c) + " остаток от деления " + d);
    }
}
